import numpy as np
from Neuron import Neuron


class NeuronLayer:
    def __init__(self, previous_values, neurons):
        self.__previous_layer = previous_values
        self._neurons = neurons

    def __calc(self):
        list = []
        for i in self._neurons:
            list.append(i.get_result())
        return list

    def print(self):
        print(self.__calc())


